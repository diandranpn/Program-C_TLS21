#include <iostream>
using namespace std;
int main ()
{
 double a = 8000;
 int panjang, harga;
 
 cout<<"Harga kain = 5000/meter"<<endl;
 cout<<"Panjang kain yang dibeli (m): ";
 cin>>panjang;
 if (panjang < 5 ) {
  harga = a*panjang;
  cout<<"Total harga senilai Rp. "<<harga<<" dan tidak mendapat potongan harga";}
 else if (5<=panjang<10) {
  harga = (a*panjang) - (a*panjang*0.2);
  cout<<"Total harga senilai Rp. "<<harga<<" dengan diskon 20%";}
 else if (panjang>=10) {
  harga = (a*panjang) - (a*panjang*0.3);
  cout<<"Total harga senilai Rp. "<<harga<<" dengan diskon 30%";}
  
 return 0;
 
}
